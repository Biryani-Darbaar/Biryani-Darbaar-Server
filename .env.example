# Server Configuration
NODE_ENV=production
PORT=4200

# API Configuration
API_BASE_URL=https://api.biryanidarbar.com
ALLOWED_ORIGINS=https://biryanidarbar.com,https://www.biryanidarbar.com,https://admin.biryanidarbar.com

# JWT Configuration
# ⚠️  MUST CHANGE: Generate strong random secrets for production!
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET_MINIMUM_32_CHARS
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_REFRESH_SECRET_MINIMUM_32_CHARS
JWT_REFRESH_EXPIRES_IN=30d

# Firebase Configuration (Production Project)
FIREBASE_PROJECT_ID=biryani-darbar-770a5
FIREBASE_STORAGE_BUCKET=biryani-darbar-770a5.appspot.com
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Stripe Configuration (Live Mode)
# ⚠️  CRITICAL: Use LIVE keys (sk_live_*) for production!
STRIPE_SECRET_KEY=sk_live_YOUR_PRODUCTION_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_PRODUCTION_WEBHOOK_SECRET

# Pushy Configuration (Production)
PUSHY_API_KEY=72289ac20803a6e4e493d15a6839413d11f9b8eaa9dc5508a918fd168e7f9cb0

# Session Configuration
# ⚠️  MUST CHANGE: Generate strong random secret for production!
SESSION_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SESSION_SECRET_MINIMUM_32_CHARS
SESSION_MAX_AGE=86400000

# Rate Limiting (Strict for production)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false
ENABLE_ERROR_STACK_TRACE=false

# CORS Configuration
CORS_ENABLED=true

# Database Configuration (Firestore)
USE_FIRESTORE_EMULATOR=false

# File Upload Configuration
MAX_FILE_SIZE=10mb
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Email Configuration (Production)
EMAIL_SERVICE=gmail
EMAIL_FROM=noreply@biryanidarbar.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_production_email@biryanidarbar.com
EMAIL_PASSWORD=your_production_email_password

# Feature Flags
ENABLE_GOLD_MEMBERSHIP=true
ENABLE_MINI_GAMES=true
ENABLE_REWARDS=true
ENABLE_NOTIFICATIONS=true

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHING=true

# Debug Configuration
DEBUG=false
VERBOSE_LOGGING=false

# Security Headers
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true

