# ========================================
# ENVIRONMENT CONFIGURATION
# ========================================
# Rename this file to .env.development, .env.qa, or .env.production
# ========================================

# Server
NODE_ENV=development
PORT=4200

# CORS (comma-separated allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# JWT
JWT_SECRET=your_jwt_secret_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_change_in_production
JWT_REFRESH_EXPIRES_IN=30d

# Firebase
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_SERVICE_ACCOUNT_PATH=./serviceAccountKey.json

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_key

# Pushy
PUSHY_API_KEY=your_pushy_api_key

# Session
# Options for SESSION_SAME_SITE: strict, lax, none
SESSION_SECRET=your_session_secret_change_in_production
SESSION_MAX_AGE=86400000
SESSION_NAME=biriyani.sid
SESSION_SAME_SITE=strict

# CORS Preflight Cache (seconds)
CORS_MAX_AGE=86400

# Password Hashing Rounds
BCRYPT_SALT_ROUNDS=12

# Mini Games Limit
MAX_MINI_GAMES=6