# Server Configuration
PORT=4200
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_change_in_production
JWT_REFRESH_EXPIRES_IN=30d

# Firebase Configuration
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-bucket-name.appspot.com
FIREBASE_SERVICE_ACCOUNT_PATH=../serviceAccountKey.json

# Stripe Configuration (Use SECRET key sk_live_* or sk_test_*, NOT public key pk_*)
STRIPE_SECRET_KEY=your_stripe_secret_key

# Pushy Configuration
PUSHY_API_KEY=your_pushy_api_key

# Session Configuration
SESSION_SECRET=your_session_secret_change_in_production

# Collection Names (Optional - defaults are set in constants)
# USERS_COLLECTION=users
# CATEGORY_COLLECTION=category
# DISHES_COLLECTION=dishes
# ORDERS_COLLECTION=orders
# ORDER_COLLECTION=order
# CART_COLLECTION=cart
# LOCATION_COLLECTION=location
# PROMO_CODES_COLLECTION=promoCodes
# GOLD_PRICE_COLLECTION=goldprice
# MINI_GAMES_COLLECTION=miniGames
# REWARDS_COLLECTION=rewards
# NOTIFICATIONS_COLLECTION=notifications
# USER_TOKENS_COLLECTION=userTokens

# Feature Flags
MAX_MINI_GAMES=6
